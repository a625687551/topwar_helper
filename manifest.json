{
    "manifest_version": 2,
    "name": "topwar_helper",
    "version": "0.0.1",
    "description": "Cure obsessive-compulsive disorder",
    "icons": {
        "16": "img/icon.png",
        "48": "img/icon.png",
        "128": "img/icon.png"
    },
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_title": "for topwar",
        "default_popup": "popup.html"
    },
    "background":{
        "scripts": ["js/background.js"]
    },
    "content_scripts": [
        {
            "matches": [
                "https://h5.topwargame.com/h5game/index.html*"
            ],
            "js": [
                "js/content.js"
            ],
            "run_at": "document_end"
        },{
            "matches": [
                "https://h5.topwargame.com/h5game/index.html*"
            ],
            "js": [
                "js/domEnd.js"
            ],
            "run_at": "document_end"
        },{
            "matches": [
                "https://*/*"
            ],
            "js": [
                "js/execute.js"
            ],
            "run_at": "document_start"
        }
    ],
    "permissions": [
        "activeTab",
        "tabs"
    ],
    "web_accessible_resources": [
        "js/inject.js",
        "js/bgc.js",
        "js/jk.js",
        "js/zcc.js",
        "js/hotkey.js"
    ],
    "default_locale": "en"
}